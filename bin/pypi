#!/bin/bash

# Automate the process of building and uploading package to PyPI

# Delete older version build directories
directories=("dist/" "build/" "planetoids_game.egg-info/")
for d in "${directories[@]}"; do
    if [ -d "$d" ]; then
        rm -rf "$d"
        echo "ğŸ—‘ï¸  Deleted $d"
    fi
done

# Build package
python3 -m build || { echo "âŒ Build failed!"; exit 1; }

# Upload to PyPI
twine upload dist/* || { echo "âŒ Upload failed!"; exit 1; }

echo "âœ… PyPI deployment complete!"
